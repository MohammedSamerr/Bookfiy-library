@model BoooCopyFormViewModel



<form method="post" asp-action="@(Model?.Id > 0 ? "Edit" : "Create" )"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModelBegin"
      data-ajax-success="@(Model?.Id > 0 ? "onEditCopySuccess" :"onAddCopySuccess")"
      data-ajax-failure="showMassegeErorr"
      data-ajax-complete="onModelComplete">

      <input type="hidden" asp-for="BookId" />
    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Name" asp-for="EdditionNumber" value="@(Model?.Id > 0 ? @Model.EdditionNumber : string.Empty)" />
            <label asp-for="EdditionNumber"></label>
            <span asp-validation-for="EdditionNumber" class="text-danger"></span>
        </div>
    </div>
    @if(Model!.ShowRentalInput){
        <div class="col">
            <div class="form-check form-switch form-check-solid form-check-custom mb-2">
                <input class="form-check-input" type="checkbox" asp-for="IsAvailabbleForRent">
                <label class="form-check-label" asp-for="IsAvailabbleForRent"> </label>
            </div>
        </div>
    }
    <partial name="_ModalFooter" />
</form>

