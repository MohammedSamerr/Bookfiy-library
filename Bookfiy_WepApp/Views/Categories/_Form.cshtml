@model CategoryFormViewModel



<form method="post" asp-action="@(Model?.Id > 0 ? "Edit" : "Create" )"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModelBegin"
      data-ajax-success="onMassegesuccess"
      data-ajax-failure="showMassegeErorr"
      data-ajax-complete="onModelComplete">
    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
    <partial name="_ModalFooter" />
</form>

